<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ble_setup.BleConnectFragment">
<!--    android:background="@drawable/images1">-->

    <TextView
        android:id="@+id/title_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to your \nSmart Collar"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginVertical="25dp"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinner_devices"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/title_bluetooth"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/button_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_below="@id/title_bluetooth"
        android:layout_toEndOf="@id/spinner_devices"
        android:layout_marginHorizontal="20dp"
        android:text="Refresh" />

    <TextView
        android:id="@+id/label_connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_refresh"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:text="Disconnected"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_connection_status"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/red"
        android:text="Disconnect" />

</RelativeLayout>