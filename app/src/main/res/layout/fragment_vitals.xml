<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vitals.VitalsFragment">
<!--    android:background="@drawable/images"-->

        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vitals Dashboard"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginVertical="25dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/image_vitals"
            android:layout_width="109dp"
            android:layout_height="84dp"
            android:layout_below="@id/title_dashboard"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Vitals icon"
            android:scaleType="centerCrop"
            android:src="@drawable/vitals_icon"/>

        <TextView
            android:id="@+id/label_heart_rate"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_vitals"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="Heart rate (bpm)"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/value_heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_vitals"
            android:layout_below="@id/title_dashboard"
            android:layout_marginStart="75dp"
            android:layout_marginVertical="25dp"
            android:gravity="center"
            android:text="--"
            android:textSize="40dp"
            android:textStyle="bold"/>


</RelativeLayout>
